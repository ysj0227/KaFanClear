<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/network_wifi_image_view"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:background="@drawable/wifi_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/internet_connect_fail"
        android:textColor="#555555"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/network_msg_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/please_check_net_or_retry"
        android:textColor="#555555"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/network_hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_blue"
        android:onClick="onClickRetry"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:text="@string/touch_refresh"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>